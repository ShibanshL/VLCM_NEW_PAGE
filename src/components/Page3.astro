---
import {Page3_Obj} from '../content/PageData'
---


<div class="PAGE3 w-full h-full flex items-start justify-center flex-col p-[20px]">
    <h1 class="PAGE3_HEAD text-6xl text-left">/ISMS Functionalities</h1>
    {Page3_Obj.map((e:any, idx:number) => {
        return (
            <>
                <div class={`FUNCTION_cARDS w-full h-[80vh] flex items-start justify-center flex-col pl-[50px]  border-b-[1px] ${idx+1 == Page3_Obj.length?'border-none':'border-white'}`} >
                    <h2 class=" text-3xl">{e.heading}</h2>
                    <div class=" w-full h-[75%] flex items-center justify-start flex-grow-0 pt-[20px] pr-[20px] pb-[20px]">
                        {e.cards.map((val:any) => {
                            return (
                                <>
                                    <div class=" h-[90%] w-[33%] flex items-start justify-between flex-col m-[10px]">
                                        <div class="h-[30px] w-[30px] rounded-[30px] bg-amber-400"></div>
                                        <h2 class="text-5xl">{val.title}</h2>
                                        <p class="text-sm">{val.desc}</p>
                                        <button class="p-[5px] pl-[15px] pr-[15px] border-white border-[3px] hover:bg-white rounded-[25px]">Learn More</button>
                                    </div>
                                </>
                            )
                        })}
                    </div>
                </div>
            </>
        )
    })}
</div>





